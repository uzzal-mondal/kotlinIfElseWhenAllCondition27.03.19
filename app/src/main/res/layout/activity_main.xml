<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:minHeight="91dp">
    <Button
            android:text=" Button One"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:id="@+id/button1" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text=" Button Two"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/button2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.475"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <Button
            android:text="Button Three"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/button3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Button Four"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/button4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="390dp"
            android:layout_height="248dp"
            android:id="@+id/textView_id" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textColor="@color/colorAccent"
            android:textStyle="bold" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>